pipeline {
    agent {
        docker { image 'node:20' }
    }
    stages {
        stage('Build Angular') {
            steps {
                sh 'npm install'
                sh 'npm run build --prod'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-angular-app .'
            }
        }
        stage('Push Docker Image') {
            steps {
                sh 'docker tag my-angular-app:latest <your-dockerhub>/my-angular-app:latest'
                sh 'docker push <your-dockerhub>/my-angular-app:latest'
            }
        }
    }
}


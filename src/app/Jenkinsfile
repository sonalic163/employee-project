pipeline {
    agent any
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'docker run --rm -v /var/jenkins_home/workspace/EmpWeb_CICD/src:/app -w /app node:20 npm install'
            }
        }
        stage('Build Angular') {
            steps {
                sh 'docker run --rm -v /var/jenkins_home/workspace/EmpWeb_CICD/src:/app -w /app node:20 npm run build --prod'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-angular-app $WORKSPACE/src/app'
            }
        }
        stage('Push Docker Image') {
            steps {
                sh 'docker tag my-angular-app:latest <dockerhub-username>/my-angular-app:latest'
                sh 'docker push <dockerhub-username>/my-angular-app:latest'
            }
        }
    }
}

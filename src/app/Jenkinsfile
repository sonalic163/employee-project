pipeline {
    agent any
    environment {
        PATH = "/usr/local/bin:$PATH"  // Node.js path
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-pat-angular',
                    url: 'https://github.com/sonalic163/employee-project.git'
            }
        }
        stage('Check Node') {
            steps {
                sh 'node -v'
                sh 'npm -v'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build Angular') {
            steps {
                sh 'npm run build --prod'
            }
        }
        stage('Build Docker Image') {
            steps {
             sh 'docker build -t empweb-frontend -f src/app/Dockerfile .'
            }
        }
        stage('Stop Existing Container') {
            steps {
                // Stop container if already running
                sh 'docker rm -f empweb-frontend || true'
            }
        }
        stage('Run Docker Container') {
            steps {
                // Run the container
                sh 'docker run -d -p 4200:80 --name empweb-frontend empweb-frontend'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check the logs.'
        }
    }
}
